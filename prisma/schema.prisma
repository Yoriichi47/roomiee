generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

model Room{
  name String 
  roomId String @id @default(cuid())
  description String
  price Float @default(0.0)
  Street String
  City String
  State String
  Country String
  ZipCode String
  guestCapacity Int
  Beds Int
  isAirConditioned Boolean @default(false)
  isWifiAvailable Boolean @default(false)
  isBreakfastAvailable Boolean @default(false)
  images String[] 
  // reviews Review[]

  @@map("rooms")
}